<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container mt-3">
        <div class="container">
            <div class="row">
              <div class="col-md-8 offset-md-2">
                <img src="<%= blog.coverImageURL%>" width="700px" class="img-fluid mb-3" alt="Cover Photo">
                <h1><%= blog.title%></h1>
                <pre><%= blog.body%></pre>
              </div>
            </div>
          </div>
    </div>

    <% if (locals.user) { %>
    <div class="container mt-3 mb-3 col-md-8 offset-md-2">
      <h3 class="mb-3 mt-3">Comments : <%=comments.length%></h3>
      <img src="<%=blog.createdBy.profileImage%>" width="50px" alt=""><%=blog.createdBy.fullName%>
    </div>
      <div class=" container mt-3 mb-3 col-md-8">
        <form action="/blog/comment/<%=blog._id%>" method="post">
            <div class="mb-3">
              <input name="content" type="text" id="content" placeholder="Enter your Comment">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    <% } %>
    <% comments.forEach(comment => { %>
      <div class="container col-md-8 mt-3 card">
        <div class="card-header">
        <img class="mt-3" src="<%=comment.createdBy.profileImage%>" width="50px" alt=""><%=comment.createdBy.fullName%> :
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p><%=comment.content%></p>
          </blockquote>
        </div>
      </div>
      <% }) %>
    <%- include("./partials/script") %>
  </body>
</html>